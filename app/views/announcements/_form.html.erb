<%= form_with(model: announcement) do |form| %>
  <% if announcement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
        <% announcement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table-row-spacing">
    <tr>
      <td>
        <%= form.label :title %>
      </td>
      <td>
        <%= form.text_field :title %>
      </td>
    </tr>

    <tr>
      <td>
        <%= form.label :description %>
      </td>
      <td>
        <%= form.text_area :description %>
      </td>
    </tr>

    <tr>
      <td>
        <%= form.label :event_id, "Event" %>
      </td>
      <td>
        <%= form.select :event_id, Event.order(:title).map{ |event| [event.title, event.id]}, include_blank: 'Send to All', id: "id_of_the_event_id_select_box" %>
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= form.submit class:'btn' %>
    <%= link_to 'Cancel', announcements_path, class:'btn' %>
  </div>
<% end %>
