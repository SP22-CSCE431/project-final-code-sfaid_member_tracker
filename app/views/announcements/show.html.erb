<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @announcement.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @announcement.description %>
</p>

<p>
  <strong>Posted on:</strong>
  <%= @announcement.posted_on %>
</p>

<p>
  <strong>Created By:</strong>
	<%= User.where(id: @announcement.user_id).last.email %>
  </p>

<p>
  <strong>Event:</strong>
	<% if @announcement.event_id.present? %>
		<td>
			<%= Event.where(id: @announcement.event_id).last.title %>
		</td>
	<% else %>
		<td>
			<%= @announcement.event_id %>
		</td>
	<% end %>
  </p>

<%= link_to 'Edit', edit_announcement_path(@announcement) %> |
<%= link_to 'View Announcements', announcements_path %>
