<html>
  <body>
    <div class="vertical-center horizontal-center">
      <div class="form">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Title:</strong>
          <%= @announcement.title %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @announcement.description %>
        </p>

        <p>
          <strong>Posted on:</strong>
          <%= @announcement.posted_on.strftime("%I:%M %p") %>
        </p>

        <p>
          <strong>Created By:</strong>
          <%= User.where(id: @announcement.user_id).last.email %>
          </p>

        <p>
          <strong>Event:</strong>
          <% if @announcement.event_id.present? %>
            <td>
              <%= Event.where(id: @announcement.event_id).last.title %>
            </td>
          <% else %>
            <td>
              <%= @announcement.event_id %>
            </td>
          <% end %>
        </p>
        
        <div class="actions">
          <%= link_to 'Back to Announcements', announcements_path %>
          <%= link_to 'Home', root_path %>
        </div>
      </div>
    </div>
  </body>
</html>
