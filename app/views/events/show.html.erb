<html>
  <body>
    <div class="vertical-center horizontal-center">
      <div class="wide form">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Title:</strong>
          <%= @event.title %>
        </p>

        <p>
          <strong>Description:</strong>
        </p>
        <p style="max-width: 500px;" class="desc"><%= @event.description %></p>

        <p>
          <strong>Date:</strong>
          <%= @event.date %>
        </p>

        <p>
          <strong>Start Time:</strong>
          <%= @event.event_time_start.strftime("%I:%M %p") %>
        </p>

        <p>
          <strong>End Time:</strong>
          <%= @event.event_time_start.strftime("%I:%M %p") %>
        </p>

        <% if @perms[:create_modify_events] %>
          <p><strong>Plans to Attend List:</strong></p>
            <table>
              <% unless @username_list.empty? %>
                <% @username_list.each do |planning| %>
                  <tr>
                    <td><%= planning.first_name %> <%= planning.last_name %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td>-</td>
                </tr>
              <% end %>
            </table>
        <% end %>

        <div class="actions">
          <%= link_to 'Back to Events', events_path, class:'btn' %>
          <%= link_to 'Home', root_path, class:'btn' %>
        </div>
      </div>
    </div>
  </body>
</html>