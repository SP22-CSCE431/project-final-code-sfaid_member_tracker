<style>
    body {  
        margin: 0;  
        padding: 0;  
        background-image: url("/assets/Sunflowers.png"); 
        /* background-size: cover;  */
        font-family: 'Arial';  
        height: 100vh;
    }  
    .login {  
        width: 382px;  
        overflow: hidden;  
        margin: auto;  
        margin: 20 0 0 450px;  
        padding: 50px;  
        background: #23463f;  
        border-radius: 35px;
    }  

    p {  
        color: white;  
        font-size: 40px;
        text-align:center;
    }  

    .buttonholder {
        text-align: center;
    }

    .button1 {
        display:inline-block;
        padding:0.3em 1.2em;
        margin:0 0.3em 0.3em 0;
        border-radius:2em;
        box-sizing: border-box;
        text-decoration:none;
        font-family:'Roboto',sans-serif;
        font-weight:300;
        color:#FFFFFF;
        background-color:#4eb5f1;
        text-align:center;
        transition: all 0.2s;
    }

    #notice {
        font-size: 20px;
        color: darkgoldenrod;
    }
</style>


<%= stylesheet_link_tag "common.css" %>
<html>    
    <body>
        <div class="vertical-center horizontal-center">
            <div class="login form" style="background: #23463F">
                <p id="notice"><%= notice %></p>
                <div>
                    <img src="/assets/saifd.png" alt="SAIFD Logo" width="100%" height="100%">
                </div>
                <form style="color:white; font-size: 40px; text-align:center"> SAIFD Member Login Page </form>
                <br>
                <div class="buttonholder">
                    <%= link_to "Sign in with Google", admin_google_oauth2_omniauth_authorize_path, :class => "button1" %>
                </div>
            </div>
        </div>
    </body>
</html>





