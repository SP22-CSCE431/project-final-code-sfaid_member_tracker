<p id="notice"><%= notice %></p>

<h1>Attendance Records</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Email</th>
      <th>Attendance Time Start</th>
      <th>Attendance Time End</th>
      <th>Plans to Attend?</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= Event.where(id: attendance.event_id).last.title %></td>
        <td><%= User.where(id: attendance.user_id).last.email %></td>
        <td><%= attendance.attend_time_start %></td>
        <td><%= attendance.attend_time_end %></td>
        <td><%= attendance.plans_to_attend %></td>

        <% if @perms[:view_all_attendances] %>
          <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
          <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @perms[:view_all_attendances] %>
  <%= link_to 'New Attendance Record', new_attendance_path %>
  <br>
<% end %>
<%= link_to 'Back', root_path %>
