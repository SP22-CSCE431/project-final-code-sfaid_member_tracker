<p id="notice"><%= notice %></p>

<h1>Permissions</h1>

<table>
  <thead>
    <tr>
      <th>Permission ID</th>
      <th>Is Admin</th>
      <th>Create/Modify Events</th>
      <th>Create/Modify Announcements</th>
      <th>View All Attendances</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.id %></td>
        <td><%= permission.is_admin %></td>
        <td><%= permission.create_modify_events %></td>
        <td><%= permission.create_modify_announcements %></td>
        <td><%= permission.view_all_attendances %></td>
        <td><%= link_to 'Show', permission %></td>
        <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
        <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permission', new_permission_path %>
