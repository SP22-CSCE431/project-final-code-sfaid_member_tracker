<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Class year</th>

      <% if @perms[:is_admin] %>
        <th>Report Rate</th>
        <th>Is Admin</th>
        <th>Create/Modify Events</th>
        <th>Create/Modify Announcements</th>
        <th>View All Attendances</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% @user_perm = Permission.where(user_id: user.id).first %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.class_year %></td>
        <% if @perms[:is_admin] %>
          <td><%= user.report_rate %></td>
          <td><%= @user_perm.is_admin %></td>
          <td><%= @user_perm.create_modify_events %></td>
          <td><%= @user_perm.create_modify_announcements %></td>
          <td><%= @user_perm.view_all_attendances %></td>
          <td><%= link_to 'Edit', edit_user_path(user.email) %></td>
          <td><%= link_to 'Destroy', 'users/' + user.email + '/destroy', data: { confirm: 'Are you sure? This action cannot be undone.' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', root_path %>